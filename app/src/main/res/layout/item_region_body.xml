<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="4dip"
    app:cardElevation="2dip">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dip">

        <ImageView
            android:id="@+id/iv_video_preview"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:ellipsize="end"
            android:lineSpacingExtra="2dip"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:text="xxxx"
            android:textColor="@color/font_normal"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/iv_video_preview"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="2dip"
            app:layout_constraintTop_toBottomOf="@+id/tv_video_title">

            <ImageView
                android:id="@+id/iv_video_play_num"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:src="@drawable/ic_upper_info_views"
                android:tint="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_video_play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:maxEms="6"
                android:minEms="6"
                android:text="xxxx"
                android:textColor="@color/black_alpha_45"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_video_play_num"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_video_online"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginRight="3dip"
                android:src="@drawable/ic_promo_index_follow"
                android:tint="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_video_favourite"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_video_online_region"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginRight="3dip"
                android:src="@drawable/ic_upper_info_danmakus"
                android:tint="@color/gray"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_video_favourite"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_video_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="4dip"
                android:text="xxxx"
                android:textColor="@color/black_alpha_45"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_video_play_num"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
